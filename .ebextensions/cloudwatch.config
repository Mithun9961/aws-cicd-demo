packages:
  yum:
    amazon-cloudwatch-agent: []

files:
  "/opt/aws/amazon-cloudwatch-agent/bin/config.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "metrics": {
          "append_dimensions": {
            "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
            "InstanceId": "${aws:InstanceId}"
          },
          "metrics_collected": {
            "mem": {
              "measurement": [
                {"name": "mem_used_percent", "unit": "Percent"}
              ],
              "metrics_collection_interval": 60
            },
            "disk": {
              "measurement": [
                {"name": "used_percent", "unit": "Percent"}
              ],
              "metrics_collection_interval": 60,
              "resources": ["*"]
            }
          }
        },
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/web.stdout.log",
                  "log_group_name": "beanstalk-flask-app",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/web.stderr.log",
                  "log_group_name": "beanstalk-flask-app",
                  "log_stream_name": "{instance_id}"
                }
              ]
            }
          }
        }
      }

commands:
  01-start-cloudwatch-agent:
    command: "/opt/aws/amazon-cloudwatch-agent/bin/amazon-cloudwatch-agent-ctl -a fetch-config -m ec2 -c file:/opt/aws/amazon-cloudwatch-agent/bin/config.json -s"
